  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.16.3",
    "express-session": "^1.16.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.3",
    "mysql2": "^1.6.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "sequelize": "^5.8.1",
    "sequelize-cli": "^5.4.0"
  }
}
